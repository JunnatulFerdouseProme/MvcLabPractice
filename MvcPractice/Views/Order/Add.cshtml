@section MyStyle
{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}
<div>
    <form method="post">
        <table>
            <tr>

                <td> <label for="Code" class="control-label col-2">Code</label></td>
                @*<td><input type="text" name="DepartmentId" value="@Model.DepartmentId" /></td>*@
                <td>@Html.DropDownListFor(c => c.Member.Code, Model.CodeSelectListItems, "--Select--")</td>
                <td></td>
            </tr>
            <tr>
                <td><label for="Name" class="control-label col-2">Name</label></td>
                <td><input type="text"  value="" id="Name" /></td>
                <td></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="text" name="Email" value="" id="Contact"/></td>
                <td></td>
            </tr>
            <tr>
                <td>ContactNo</td>
                <td><input type="text" name="ContactNo" value="" id="ContactNo"/></td>
                <td></td>
            </tr>
            <tr>

                <td>Type</td>
                @*<td><input type="text" name="DepartmentId" value="@Model.DepartmentId" /></td>*@
                <td>@Html.DropDownListFor(c => c.FoodItemId, Model.FoodItemSelectListItems, "--Select--")</td>
                <td></td>
            </tr>
            <tr>
                <td>UnitPrice</td>
                <td><input type="text" name="UnitPrice" value="@Model.UnitPrice" /></td>
                <td></td>
            </tr>
            <tr>
                <td>Quantity</td>
                <td><input type="text" name="ContactNo" value="@Model.Qauntity" /></td>
                <td></td>
            </tr>
            <tr>
                <td>Date</td>
                <td><input type="date" name="ContactNo" value="@Model.Date" /></td>
                <td></td>
            </tr>
            <tr>
            <tr>
                <td></td>
                <td><input type="submit" id=" Button" value="Save" /></td>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <h3>
                            <b>
                                @ViewBag.Message
                            </b>
                        </h3>
                    }

                </td>
            </tr>

        </table>
    </form>

    @*@{
        Html.RenderPartial("~/Views/Shared/Member/_MemberDetails.cshtml", Model);
